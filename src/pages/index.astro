---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to my portfolio website.">
  <div
    class="flex justify-center items-center w-screen h-screen bg-gradient-to-tr from-base-300 via-base-300 dark:via-black dark:to-black flex-col gap-8"
  >
    <div class="text-2xl sm:text-6xl font-bold text-black dark:invert">
      Welcome
    </div>
    <div class="flex flex-row gap-3 justify-center">
      <a
        href="/projects"
        class="btn w-1/2 text-black bg-base-100 normal-case border-2 border-black border-opacity-60 dark:bg-transparent dark:invert hover:text-white"
      >
        Projects
      </a>
      <a
        href="/blog"
        class="btn w-1/2 text-black bg-base-100 normal-case border-2 border-black border-opacity-60 dark:bg-transparent dark:invert hover:text-white"
      >
        Blog
      </a>
    </div>
    <div class="absolute bottom-3 gap-3 w-screen flex justify-center">
      <a
        href="https://github.com/TudorZgimbau"
        class="btn border-none p-2 bg-transparent invert dark:invert-0"
      >
        <img class="h-full opacity-90" src="github.svg" alt="GitHub logo" />
      </a>
      <a
        href="https://www.linkedin.com/in/tudor-zgîmbău-a85274234/"
        class="btn border-none p-2 bg-transparent invert dark:invert-0"
      >
        <img
          class="h-full invert opacity-90"
          src="linkedin.svg"
          alt="LinkedIn logo"
        />
      </a>
    </div>
  </div>
</Layout>
