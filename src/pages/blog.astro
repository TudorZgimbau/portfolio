        <div class="prose mx-auto dark:prose-invert space-y-12">
          <Item
            title="Who am I?"
            link="/blog/who_am_i"
            description="July 11, 2023"
          />
          <Item
            title="Building developer tools"
            link="/blog/building_developer_tools"
            description="July 11, 2023"
          />
          <Item
            title="Realtime Code Sharing with Upstash Redis"
            link="/blog/upstash2"
            description="January 24, 2023"
          />
          <Item
            title="Building a realtime emergency response system"
            link="/blog/upstash1"
            description="December 20, 2022"
          />
          <Item
            title="Career and business posts on LinkedIn"
            link="https://www.linkedin.com/in/tudor-zgîmbău-a85274234/recent-activity/all/"
          />
        </div>
      </div>
    </div>
  </body>
</html>
